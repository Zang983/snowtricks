{% for trick in tricks %}
    <article class="trick_card">
        <a href="{{ path('detail_trick',{'id':trick.id}) }}">
            <figure>
                <img src="{{ asset('images/home_cover.avif') }}" alt="Image de la figure {{ trick.name }}">
                <figcaption>
                    <h2>{{ trick.name }}</h2>
                    <div>
                        <img src="{{ asset('images/edit.svg') }}" width="20" height="20"
                             alt="Modifier la figure {{ trick.name }}" class="manage_btn">
                        <img src="{{ asset('images/trash.svg') }}" width="20" height="20"
                             alt="Supprimer la figure {{ trick.name }}" class="manage_btn">
                    </div>
                </figcaption>
            </figure>
        </a>
    </article>
{% endfor %}